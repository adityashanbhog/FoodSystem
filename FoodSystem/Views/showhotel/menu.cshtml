@model List<FoodSystem.p1>

@{
    ViewBag.Title = "Menu";
    List<string> li = new List<string>();
}

<h2>Menu</h2>
@using (Html.BeginForm("submit", "Order"))
{
    foreach (var item in this.Model)
    {

        <th>
            <h3>@item.name</h3>
        </th>

        var x = from m in item.value
                orderby m.menu_Name
                select m;
        foreach (var i in x)
        {
            <table class="table" border="1">
                <tr>
                    <td width=50%>

                        @i.menu_Name
                    </td>
                    <td width=30%>
                        @i.price

                    </td>
                    @*@{li.Add(i.menu_Name)}*@
                    <td width=20%>
                        <input type="number" name="@i.menu_Name" min="0" value="0" max="10" />
                    </td>
                </tr>
            </table>

        }
    }

    @*@Html.DropDownList("selectMenu", new SelectList(li), "select Item", new { @class = "form-control" })*@

    <input type="submit" value="submit" />

}
